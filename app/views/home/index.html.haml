
= render :partial => 'shared/lookup'

.recent
  .left
    %h2 people recently joined

    - unless @recent_users.empty?

      .recent-users
        - @recent_users.each do |user|
          = link_to user.name, user_path(user.nickname), :class => 'user'

  .right
    %h2 movies recently watched

    - unless @recent_movies.empty?

      .recent-movies
        - @recent_movies.each do |movie|
          .movie
            = movie.title
            %sup= movie.watches.count
