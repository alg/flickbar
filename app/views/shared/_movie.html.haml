- is_owner = current_user == owner if user_signed_in?

.movie{:id => "movie_#{movie.id}"}
  .thumb
    = image_tag movie.poster.url(:small)
  .details
    %h2
      = movie.title
      %sup= movie.users.count
    - if movie.director.present?
      .director
        by
        %span.name= movie.director
