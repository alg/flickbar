
= render :partial => 'shared/lookup' #if current_user == @account

= content_for :sidebar do
  = render :partial => 'shared/friendship', :locals => { :visitor => current_user, :user => @account }

- if @watches.empty?
  no movies
- else
  .watches
    - @watches.each do |watch|
      .watch
        .ago
          added
          = time_ago_in_words(watch.created_at)
          ago
          - if current_user == @account
            = link_to image_tag('icons/cross-small.png'), watch_path(watch), :class => 'remove', :method => :delete, :confirm => 'Are you sure?'
        .thumb
          = image_tag watch.movie.poster.url(:thumb)
        %h2
          = watch.movie.title
          %sup= watch.movie.users.count
        - if watch.movie.director.present?
          .director
            by
            %span.name= watch.movie.director

